<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/renren_dialog_btn_bg">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/common_dialog_content_share_to_text_color"
            android:text="分享到"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/dialog_share_to_icon_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/common_dialog_feed_share_btn_pengyouquan"/>
        <ImageView
                android:id="@+id/dialog_share_to_icon_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_dialog_content_share_to_icon_item_gap"
                android:src="@drawable/common_dialog_feed_share_btn_weixin"/>
        <ImageView
                android:id="@+id/dialog_share_to_icon_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_dialog_content_share_to_icon_item_gap"
                android:src="@drawable/common_dialog_feed_share_btn_qzone"
                />
        <ImageView
                android:id="@+id/dialog_share_to_icon_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_dialog_content_share_to_icon_item_gap"
                android:src="@drawable/common_dialog_feed_share_btn_weibo"/>
        <ImageView
                android:id="@+id/dialog_share_to_icon_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_dialog_content_share_to_icon_item_gap"
                android:src="@drawable/common_dialog_feed_share_btn_renren"/>
    </LinearLayout>

    <TextView
            android:id="@+id/dialog_text_item_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/common_dialog_content_share_to_text_item_hrz_margin"
            android:layout_marginRight="@dimen/common_dialog_content_share_to_text_item_hrz_margin"
            android:layout_marginTop="12dp"
            android:background="@drawable/newsfeed_interaction_button_shape"
            android:gravity="center"
            android:textColor="@color/common_dialog_content_share_to_text_color"
            android:text="测试1"
            android:visibility="gone"/>

    <TextView
            android:id="@+id/dialog_text_item_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/common_dialog_content_share_to_text_item_hrz_margin"
            android:layout_marginRight="@dimen/common_dialog_content_share_to_text_item_hrz_margin"
            android:layout_marginTop="12dp"
            android:background="@drawable/newsfeed_interaction_button_shape"
            android:gravity="center"
            android:textColor="@color/common_dialog_content_share_to_text_color"
            android:text="测试2"
            android:visibility="gone"/>

    <TextView
            android:id="@+id/dialog_text_item_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/common_dialog_content_share_to_text_item_hrz_margin"
            android:layout_marginRight="@dimen/common_dialog_content_share_to_text_item_hrz_margin"
            android:layout_marginTop="12dp"
            android:background="@drawable/newsfeed_interaction_button_shape"
            android:gravity="center"
            android:textColor="@color/common_dialog_content_share_to_text_color"
            android:text="测试3"
            android:visibility="gone"/>

    <TextView
            android:id="@+id/dialog_text_item_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/common_dialog_content_share_to_text_item_hrz_margin"
            android:layout_marginRight="@dimen/common_dialog_content_share_to_text_item_hrz_margin"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/newsfeed_interaction_button_shape"
            android:gravity="center"
            android:textColor="@color/common_dialog_content_share_to_text_color"
            android:text="取消"/>
</LinearLayout>